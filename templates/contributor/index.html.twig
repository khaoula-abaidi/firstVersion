{% extends 'base.html.twig' %}

{% block title %}Mon espace{% endblock %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-6 col-md-6">
                <div class="well well-sm">
                    <div class="row">
                        <div class="col-sm-6 col-md-4">
                            <img src="http://placehold.it/380x500" alt="" class="img-rounded img-responsive" />
                        </div>
                        <div class="col-sm-6 col-md-8">
                            <h4>{{ contributor.nom }} {{ contributor.prenom }}</h4>
                            <small><cite title="{{ contributor.civilite }}">{{ contributor.login }} <i class="glyphicon glyphicon-map-marker">
                                    </i></cite></small>
                            <p>
                                <i class="glyphicon glyphicon-envelope"></i>{{ contributor.email }}
                                <br />

                            <div class="btn-group">
                                <button type="button" class="btn btn-primary">
                                    {{ contributor.login }}</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}